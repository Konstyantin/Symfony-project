{% extends 'base.html.twig' %}

{% block title %}
    Available
{% endblock %}

{% block body %}
    <div class="available-car-title">
        <p>Available car list</p>
    </div>
    <div class="available-car-container">
        {{ render_breadcrumbs() }}
        <button type="button" class="btn btn-default show-search-car-form-btn" aria-label="Left Align">
            <span class="glyphicon glyphicon-plus show-form-icon" aria-hidden="true"></span>
        </button>

        <div class="car-search">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
        <div class="car-list-section">
            {% for car in carList %}
                <a href="{{ path('car_view', {'carName': car.slug, 'model': car.model.slug}) }}" id="{{ car.name }}">
                    <div class="car-item col-sm-3">
                        <div class="car-logo">
                            <img src="{% path car.imageLogo, 'reference' %}" alt="">
                        </div>
                        <div class="car-data">
                            <span>{{ car.name }}</span>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/js/car.js') }}"></script>
{% endblock %}